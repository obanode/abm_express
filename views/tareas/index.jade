extends ../layout

block content
	h1= title
	p Welcome to #{title}
	- if (docs.length)
		table
			tr
				th Tarea
				-each tarea in docs
					tr
						td  #{tarea.desc} 
							a.btn(href="/tareas/#{tarea.id}/editar") Editar
							form(method='post', action='/tareas/' + tarea.id)
								input(name='_method', value="DELETE", type="hidden")
								button.btn(type='submit') Borrar
	- else
		p No se encontraron tareas