h1 title
- if (error)
	p Error: Tarea inexistente
- else 
	form(method='post', action='/tareas/' + tarea.id)
		input(name='_method', value='PUT', type='hidden')
		fieldset
			legend Editar tarea
			div.clearfix
				label Tarea
				div.input
					input(name='tarea[desc]', class='xlarge', value="#{tarea.desc}")
				div.actions
					input(type='submit', value='Guardar', class='btn primary')
					button(type='reset', class='btn') Cancelar
	